@using HealthcareApp.Services.ViewModels

@model List<DoctorViewModel>
@{
    ViewData["Title"] = "List doctors";
}

<div class="mt-5 mb-2">
    <a asp-action="Create">Create new</a>
</div>

<form asp-controller="Doctor" asp-action="Index" method="get">
    <p>
        First name: <input type="text" name="SearchString" />
        <input type="submit" value="Search" />
    </p>
</form>

<table class="table table-striped">
    <tr>
        <th>
            Name
        </th>
        <th>
            Email
        </th>
        <th>
            Actions
        </th>
    </tr>
    @foreach (var doctor in Model)
    {

            <tr> 
                <td>
                @doctor.FirstName @doctor.LastName
                </td>
                <td>
                @doctor.Email
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@doctor.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@doctor.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@doctor.Id">Delete</a>
                </td>
            </tr>
    }
</table>
